@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div class="d-flex justify-content-center container mt-5">
        <div class="row">
            <div class="col-md-10">
                <div class="d-flex flex-row justify-content-between align-items-center card cookie p-3">
                    <div class="d-flex flex-row align-items-center" id="cookieConsent">
                        <i class="fa-solid fa-cookie-bite"></i>
                        <!-- CUSTOMIZED MESSAGE IN COOKIE POPUP -->
                        <p>This site only stores cookies necessary for site functionality. Do you wish to continue?</p>
                        <br /><a href="../home/Privacy">Learn More</a><br />
                        <button class="btn btn-dark align-right" type="button" data-dismiss="alert" data-cookie-string="@cookieString" href="/index">
                            <span aria-hidden="true">Accept</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>(function () {
            var button = document.querySelector("#cookieConsent button[data-cookie-string]");
            button.addEventListener("click", function (event) {
                document.cookie = button.dataset.cookieString;
            }, false);
        })();</script>
} 