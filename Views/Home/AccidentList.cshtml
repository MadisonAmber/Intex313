@model IEnumerable<Accident>

<div class="">
    <div class="row">
        <div class="col-md-4">
            <partial name="Filter" model="@ViewBag.Filter"/>
        </div>
        <div class="col-md-8">
            <div class="list-container">

                @foreach(Accident a in Model)
                {
                    <div class="card">
                        <div class="card-header">
                            Accident Information
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Accident on @a.Main_Road_Name</h5>
                            <p class="card-text">On @a.Crash_Date_Time, this accident took place.</p>
                            <a class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<div class="mt-2" page-model="@ViewBag.PageInfo" page-action="AccidentList" page-filter="@ViewBag.Filter"></div>